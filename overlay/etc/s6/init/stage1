#!/usr/bin/execlineb -P

cd /
umask 022
fdclose 0
fdclose 1
fdclose 2

if { mkdir -p /dev/shm /dev/pts /sys/fs/cgroup }
if { mount -t tmpfs tmpfs /dev/shm }
if { mount -t devpts devpts /dev/pts }

if { mount -t tmpfs cgroup /sys/fs/cgroup }
forbacktickx i { pipeline { cut -f1 /proc/cgroups } tail -n+2 }
import i
foreground { mount -t cgroup -o ${i},,x-mount.mkdir cgroup /sys/fs/cgroup/${i} }

redirfd -r 0 /dev/null
foreground { mkdir -p /var/s6/ }
redirfd -wnb 1 /var/s6/fifo
fdmove -c 2 1

background
{
    s6-setsid
    redirfd -w 1 /var/s6/fifo
    forbacktickx i { ls /etc/s6/task }
    import i
    /etc/s6/task/${i}
}
unexport LASTPID

s6-envdir /etc/s6/env
s6-svscan -t0 /etc/s6/service

