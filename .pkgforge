name 'rootfs'
org 'dock0'

source(
  type: 'git',
  path: '.'
)

build do
  run 'mkdir -p /run/shm'
  run 'dock0 image config.yaml'
  run "mv /tmp/root.fs.sfs #{releasedir}/root.fs.sfs"
end

package(
  type: 'file',
  artifacts: [
    {
      source: 'root.fs.sfs',
      name: 'root.fs.sfs'
    }
  ]
)

